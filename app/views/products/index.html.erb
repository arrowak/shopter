<div class="page-actions">
  <%= link_to 'New Product', new_product_path, :class => "page-action" %>
</div>

<div class="card">
  <div class="card-header">
    <legend>Products</legend>
  </div>
  <div class="card-body">
    <table class="table table-dark table-neon table-striped table-hover">
      <thead>
      <tr>
        <th>Category</th>
        <th>Name</th>
        <th>Price</th>
        <th>Brand</th>
        <th>Images</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.category.name %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.brand.name %></td>
          <td><%= link_to "#{product.images.count} images", product, :class => "text-white text-underline" %></td>
          <td><%= product.description.truncate(50) %></td>
          <td><%= link_to 'Show', product, :class => "text-white text-underline" %></td>
          <td><%= link_to 'Edit', edit_product_path(product), :class => "text-white text-underline" %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'}, :class => "text-white text-underline" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>