<%= form_with(model: product, local: true, :class => "col-8") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.where('active', 'true'), :id, :name, {:prompt => true}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :brand_id %>
    <%= form.collection_select :brand_id, [], :id, :name, {:prompt => true}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <div class="input-group-text"><i class="fas fa-rupee-sign"></i></div>
      </div>
      <%= form.number_field :price, :class => "form-control col-3" %>
    </div>

  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :images %>
    <%= form.file_field :images, :multiple => true, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", :class => "btn btn-primary form-action" %>
  </div>
<% end %>
