<div class="page-actions">
  <%= link_to 'Edit Product', edit_product_path(@product), :class => "page-action" %>
</div>

<h3> <%= @product.name %> </h3>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.html_price %>
</p>

<% if @product.images.present? %>
  <div class="p-5 text-center">
    <% @product.images.each do |image| %>
      <%= image_tag image.variant(resize: "300x300"), :class => 'img p-3' %>
    <% end %>
  </div>
<% end %>

<p>
  <strong>Description:</strong>
<div class="fr-view">
  <%= @product.description.html_safe %>
</div>
</p>

