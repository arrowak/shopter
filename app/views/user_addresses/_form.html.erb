<%= form_with(model: user_address, local: true) do |form| %>
  <% if user_address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_address.errors.count, "error") %> prohibited this user_address from being saved:</h2>

      <ul>
        <% user_address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label "Give a short name for this address" %>
    <%= form.text_field :alias, :class => "form-control col-4 placeholder-small", :placeholder => "Ex: Home, Work, Akshay's House" %>
  </div>

  <div class="form-row mt-5 pt-5">
    <div class="form-group col-6">
      <%= form.label :name %>
      <%= form.text_field :name, :class => "form-control" %>
    </div>

    <div class="form-group col-6">
      <%= form.label "Door/Apartment" %>
      <%= form.text_field :door_apartment, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :locality %>
    <%= form.text_field :locality, :class => "form-control" %>
  </div>

  <div class="form-row">
    <div class="form-group col-4">
      <%= form.label :city %>
      <%= form.text_field :city, :class => "form-control" %>
    </div>

    <div class="form-group col-4">
      <%= form.label :state %>
      <%= form.text_field :state, :class => "form-control" %>
    </div>

    <div class="form-group col-4">
      <%= form.label :country %>
      <%= form.text_field :country, :class => "form-control", :value => "India", :readonly => true %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-4">
      <%= form.label :pincode %>
      <%= form.number_field :pincode, :class => "form-control" %>
    </div>

    <div class="form-group col-4">
      <%= form.label :contact %>
      <%= form.text_field :contact, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group form-inline">
    <%= form.label :is_home do %>
      <%= form.check_box :is_home, :class => "form-control" %>
      <div class="ml-3">This is a home address</div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
