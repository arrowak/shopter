<div class="page-actions">
  <%= link_to 'New Promotion', new_promotion_path, :class => "page-action" %>
</div>

<div class="card">
  <div class="card-header">
    <legend>Promotions</legend>
  </div>
  <div class="card-body">
    <table class="table table-dark table-neon table-striped table-hover">
      <thead>
      <tr>
        <th>Start date</th>
        <th>End date</th>
        <th>Promotable Type</th>
        <th>Promotable</th>
        <th>Active</th>
        <th>Priority</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @promotions.each do |promotion| %>
        <tr>
          <td><%= promotion.start_date %></td>
          <td><%= promotion.end_date %></td>
          <td><%= promotion.promotable_type %></td>
          <td><%= promotion.promotable.name %></td>
          <td><%= promotion.active %></td>
          <td><%= promotion.priority %></td>
          <td><%= link_to 'Show', promotion, :class => "text-white text-underline" %></td>
          <td><%= link_to 'Edit', edit_promotion_path(promotion), :class => "text-white text-underline" %></td>
          <td><%= link_to 'Destroy', promotion, method: :delete, data: {confirm: 'Are you sure?'}, :class => "text-white text-underline" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>